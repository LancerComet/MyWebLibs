{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["DOM", "ES5", "ES2015"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true
  }
}
